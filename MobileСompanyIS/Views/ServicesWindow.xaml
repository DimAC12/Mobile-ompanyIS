<Window x:Class="MobileСompanyIS.Views.ServicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MobileСompanyIS.Views"
        mc:Ignorable="d"
        Title="ServicesWindow" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding Services}" SelectedItem="{Binding SelectedService}" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}" Width="150" />
                    <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding Type}" Width="100" />
                    <GridViewColumn Header="Стоимость" DisplayMemberBinding="{Binding Cost}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
