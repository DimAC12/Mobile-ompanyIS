<Window x:Class="MobileСompanyIS.Views.ServiceEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MobileСompanyIS.Views"
        mc:Ignorable="d"
        Title="ServiceEditWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Название:" />
            <TextBox Text="{Binding Service.Name, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Тип:" />
            <TextBox Text="{Binding Service.Type, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Стоимость:" />
            <TextBox Text="{Binding Service.Cost, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
