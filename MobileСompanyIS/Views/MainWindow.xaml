<Window x:Class="MobileСompanyIS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MobileСompanyIS.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Content="Абоненты" Width="200" Height="50" Command="{Binding OpenAbonentsWindowCommand}" />
            <Button Content="Тарифы" Width="200" Height="50" Command="{Binding OpenTariffsWindowCommand}" Margin="0,10,0,0"/>
            <Button Content="Счета" Width="200" Height="50" Command="{Binding OpenBillsWindowCommand}" Margin="0,10,0,0"/>
            <Button Content="Платежи" Width="200" Height="50" Command="{Binding OpenPaymentsWindowCommand}" Margin="0,10,0,0"/>
            <Button Content="Start Simulation" Width="150" Height="50" Command="{Binding StartSimulationCommand}" Margin="0,50,0,0"/>
            <Button Content="Stop Simulation" Width="150" Height="50" Command="{Binding StopSimulationCommand}" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
