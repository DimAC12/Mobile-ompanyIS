<Window x:Class="MobileСompanyIS.Views.BillsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MobileСompanyIS.Views"
        mc:Ignorable="d"
        Title="BillsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListView ItemsSource="{Binding Bills}" SelectedItem="{Binding SelectedBill}" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Абонент" DisplayMemberBinding="{Binding Abonent.FullName}" Width="150" />
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Date}" Width="100" />
                    <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding Amount}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>

        <Button Command="{Binding ClearCommand}" Content="Очистить" FontSize="15" Grid.Row="1" Height="30" Width="200" Margin="5"/>

    </Grid>
</Window>
